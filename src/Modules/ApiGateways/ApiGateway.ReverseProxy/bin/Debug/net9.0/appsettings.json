{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtOption": {
    "Issuer": "https://localhost:7091",
    "Audience": "https://localhost:7091",
    "ExpiryMinutes": 1500,
    "RefreshTokenExpiryDays": 7
  },
  "PublicEndpoints": {
    "user": [
      "/api/v1/user/login",
      "/api/v1/user/register",
      "/api/v1/user/send-otp",
      "/api/v1/user/reset-password",
      "/api/v1/user/vertify-otp"
    ]
  },
  "SwaggerServices": [
    {
      "Name": "User Service",
      "Url": "/user/swagger/v1/swagger.json"
    },
    {
      "Name": "Product Service",
      "Url": "/product/swagger/v1/swagger.json"
    },
    {
      "Name": "Cart Service",
      "Url": "/cart/swagger/v1/swagger.json"
    },
    {
      "Name": "Order Service",
      "Url": "/order/swagger/v1/swagger.json"
    }
  ],
  "ReverseProxy": {
    "Routes": {
      "user-api": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v1/user/{**catch-all}"
        }
      },
      "user-info-api": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        }
      },
      "product-api": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/v1/products/{**catch-all}"
        }
      },
      "brand-api": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/v1/brands/{**catch-all}"
        }
      },
      "categories-api": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/v1/categories/{**catch-all}"
        }
      },
      "cart-api": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/v1/cart/{**catch-all}"
        }
      },
      "order-api": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/v1/order/{**catch-all}"
        }
      },
      "order-info-api": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/v1/orders/{**catch-all}"
        }
      },
      "user-swagger": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user"
          }
        ]
      },
      "product-swagger": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/product/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/product"
          }
        ]
      },
      "cart-swagger": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/cart/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/cart"
          }
        ]
      },
      "order-swagger": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/order/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/order"
          }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "user-api": {
            "Address": "https://localhost:5003/"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-api": {
            "Address": "https://localhost:5002/"
          }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "cart-api": {
            "Address": "https://localhost:5001/"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "order-api": {
            "Address": "https://localhost:5004/"
          },
          "order-info-api": {
            "Address": "https://localhost:5004/"
          }
        }
      }
    }
  }
}
